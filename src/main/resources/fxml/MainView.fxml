<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyplanner.kontroler.KontrolerUtama">

    <!-- Bagian Atas -->
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label text="Perencana Belajar Adaptif" styleClass="app-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="manageCourseBtn" text="Kelola Mata Kuliah" styleClass="btn-primary"/>
                <Button fx:id="viewScheduleBtn" text="Lihat Jadwal" styleClass="btn-secondary"/>
                <Button fx:id="generateScheduleBtn" text="Buat Jadwal" styleClass="btn-success"/>
                <MenuButton fx:id="userMenuBtn" text="ðŸ‘¤ Pengguna" styleClass="btn-secondary" mnemonicParsing="false">
                    <items>
                        <MenuItem fx:id="profileMenuItem" text="ðŸ‘¤ Profil Saya"/>
                        <MenuItem fx:id="settingsMenuItem" text="âš™ Pengaturan"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="logoutMenuItem" text="â† Keluar"/>
                    </items>
                </MenuButton>
            </HBox>
            <Separator/>
        </VBox>
    </top>

    <!-- Konten Utama -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="20" style="-fx-padding: 30;">

                <!-- Bagian Selamat Datang -->
                <VBox spacing="10" styleClass="card">
                    <Label fx:id="welcomeLabel" text="Selamat Datang!" styleClass="section-title"/>
                    <Label fx:id="dateLabel" text="Senin, 20 Oktober 2025" styleClass="date-label"/>
                </VBox>

                <!-- Grid Widget -->
                <GridPane hgap="12" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="16.67"/>
                        <ColumnConstraints percentWidth="16.67"/>
                        <ColumnConstraints percentWidth="16.67"/>
                        <ColumnConstraints percentWidth="16.67"/>
                        <ColumnConstraints percentWidth="16.67"/>
                        <ColumnConstraints percentWidth="16.67"/>
                    </columnConstraints>

                    <!-- Widget Runtutan Belajar -->
                    <VBox fx:id="streakContainer" alignment="CENTER" spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                    <!-- Widget Jam -->
                    <VBox fx:id="clockContainer" alignment="CENTER" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <!-- Widget Waktu Belajar Hari Ini -->
                    <VBox fx:id="studyTimeContainer" alignment="CENTER" spacing="8" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                    <!-- Widget Ulasan Berikutnya -->
                    <VBox fx:id="nextReviewContainer" alignment="CENTER" spacing="8" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <!-- Widget Pelacak Pencapaian -->
                    <VBox fx:id="achievementContainer" alignment="CENTER" spacing="8" GridPane.columnIndex="4" GridPane.rowIndex="0"/>

                    <!-- Widget Tugas Mendatang -->
                    <VBox fx:id="upcomingTasksWidgetContainer" alignment="CENTER" spacing="8" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
                </GridPane>

                <!-- Kartu Statistik -->
                <HBox spacing="20">
                    <!-- Kartu Progress Keseluruhan -->
                    <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
                        <Label text="Progress Keseluruhan" styleClass="stat-title"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Total Topik" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                                <Label fx:id="totalTopicsLabel" text="0" styleClass="stat-number"/>
                            </VBox>
                            <Separator orientation="VERTICAL"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Dikuasai" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                                <Label fx:id="masteredTopicsLabel" text="0" styleClass="stat-number"/>
                            </VBox>
                        </HBox>
                        <ProgressBar fx:id="overallProgressBar" progress="0" maxWidth="Infinity"/>
                        <Label fx:id="overallProgressLabel" text="0%" styleClass="progress-label"/>
                    </VBox>

                    <!-- Kartu Progress Hari Ini -->
                    <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
                        <Label text="Progress Hari Ini" styleClass="stat-title"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Total Tugas" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                                <Label fx:id="todayTasksLabel" text="0" styleClass="stat-number"/>
                            </VBox>
                            <Separator orientation="VERTICAL"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Selesai" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                                <Label fx:id="completedTasksLabel" text="0" styleClass="stat-number"/>
                            </VBox>
                        </HBox>
                        <ProgressBar fx:id="todayProgressBar" progress="0" maxWidth="Infinity"/>
                        <Label fx:id="todayProgressLabel" text="0%" styleClass="progress-label"/>
                    </VBox>
                </HBox>

                <!-- Grid Konten Utama -->
                <HBox spacing="12">
                    <!-- Tugas Hari Ini -->
                    <VBox spacing="15" styleClass="card" HBox.hgrow="ALWAYS">
                        <Label text="Tugas Hari Ini" styleClass="section-title"/>
                        <Separator/>
                        <ScrollPane fitToWidth="true" prefHeight="400" style="-fx-background-color: transparent;">
                            <VBox fx:id="todayTasksContainer" spacing="10" style="-fx-padding: 5;"/>
                        </ScrollPane>
                    </VBox>

                    <!-- Ujian Mendatang -->
                    <VBox spacing="15" styleClass="card" prefWidth="350">
                        <Label text="Ujian Mendatang" styleClass="section-title"/>
                        <Separator/>
                        <ScrollPane fitToWidth="true" prefHeight="400" style="-fx-background-color: transparent;">
                            <VBox fx:id="upcomingExamsContainer" spacing="10" style="-fx-padding: 5;"/>
                        </ScrollPane>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
