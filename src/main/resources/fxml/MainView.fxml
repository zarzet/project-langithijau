<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.shape.*?>

<!-- Root StackPane untuk overlay dialog SPA-style -->
<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.studyplanner.kontroler.KontrolerUtama"
           styleClass="root-container">

<BorderPane styleClass="main-container">

    <!-- Sidebar Kiri -->
    <left>
        <VBox fx:id="sidebar" spacing="8" styleClass="sidebar" style="-fx-padding: 20 16; -fx-min-width: 240; -fx-pref-width: 240;">
            <!-- Logo/Title Section -->
            <VBox spacing="4" style="-fx-padding: 0 0 24 0;">
                <Label text="Perencana Belajar" styleClass="sidebar-title" style="-fx-font-size: 18px; -fx-font-weight: 700;"/>
                <Label text="Adaptif" styleClass="sidebar-subtitle" style="-fx-font-size: 13px; -fx-opacity: 0.7;"/>
            </VBox>

            <!-- Navigation Buttons -->
            <VBox spacing="8" VBox.vgrow="ALWAYS" style="-fx-padding: 8 0;">
                <Button fx:id="tombolKelolaMataKuliah" text="Kelola Mata Kuliah" styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
                <Button fx:id="tombolLihatJadwal" text="Lihat Jadwal" styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
            </VBox>

            <!-- Settings & Logout Buttons at Bottom -->
            <VBox spacing="8">
                <Button fx:id="tombolPengaturan" text="Pengaturan" styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
                <Button fx:id="tombolKeluar" text="Keluar" styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Konten Utama -->
    <center>
        <ScrollPane fx:id="scrollPaneUtama" fitToWidth="true" styleClass="scroll-pane">
            <VBox fx:id="kontenDashboard" spacing="16" style="-fx-padding: 20;">

                <!-- Hero Section - Welcome & Date -->
                <HBox fx:id="welcomeSection" alignment="CENTER_LEFT" spacing="16" style="-fx-padding: 8 0;">
                    <!-- Toggle Sidebar Button -->
                    <Button fx:id="tombolAlihSidebar" styleClass="toggle-sidebar-btn" style="-fx-font-size: 24px; -fx-padding: 8 12;"/>

                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label fx:id="labelSelamatDatang" text="Selamat Datang!" styleClass="section-title" style="-fx-font-size: 28px; -fx-font-weight: 600;"/>
                        <Label fx:id="labelTanggal" text="Senin, 20 Oktober 2025" styleClass="date-label" style="-fx-font-size: 14px; -fx-opacity: 0.7;"/>
                    </VBox>

                    <!-- User Profile Section -->
                    <HBox spacing="12" alignment="CENTER">
                        <!-- Settings Button -->
                        <Button fx:id="tombolPengaturanHeader" styleClass="header-icon-btn" style="-fx-font-size: 20px; -fx-padding: 10;"/>
                        
                        <!-- Profile Picture Button -->
                        <Button fx:id="tombolProfilHeader" styleClass="profile-btn" style="-fx-padding: 0; -fx-min-width: 44; -fx-min-height: 44; -fx-max-width: 44; -fx-max-height: 44;"/>
                    </HBox>
                </HBox>

                <!-- Stats Overview Cards -->
                <GridPane fx:id="statsGrid" hgap="16" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" minWidth="280"/>
                        <ColumnConstraints percentWidth="50" minWidth="280"/>
                    </columnConstraints>

                    <!-- Kartu Statistik Hari Ini dengan Donut Chart -->
                    <VBox spacing="16" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-padding: 20;">
                        <Label text="Statistik Hari Ini" styleClass="stat-title" style="-fx-font-size: 16px; -fx-font-weight: 700;"/>
                        <HBox spacing="24" alignment="CENTER_LEFT">
                            <!-- Donut Chart Container -->
                            <StackPane fx:id="donutChartContainer" prefWidth="120" prefHeight="120"/>
                            
                            <!-- Legend -->
                            <VBox spacing="12" alignment="CENTER_LEFT">
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <Circle radius="6" fill="#4CAF50"/>
                                    <VBox spacing="2">
                                        <Label text="Selesai" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                                        <Label fx:id="labelStatSelesai" text="0 Sesi" style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
                                    </VBox>
                                </HBox>
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <Circle radius="6" fill="#FF9800"/>
                                    <VBox spacing="2">
                                        <Label text="Tertunda" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                                        <Label fx:id="labelStatTertunda" text="0 Sesi" style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Kartu Aktivitas Mingguan dengan Bar Chart -->
                    <VBox spacing="16" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-padding: 20;">
                        <Label text="Aktivitas Mingguan" styleClass="stat-title" style="-fx-font-size: 16px; -fx-font-weight: 700;"/>
                        <BarChart fx:id="chartAktivitasMingguan" legendVisible="false" animated="false" 
                                  prefHeight="140" categoryGap="8" barGap="2">
                            <xAxis>
                                <CategoryAxis fx:id="xAxisHari" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxisJumlah" side="LEFT" autoRanging="true"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                </GridPane>
                
                <!-- Hidden elements untuk kompatibilitas -->
                <HBox visible="false" managed="false">
                    <Label fx:id="labelTotalTopik" text="0"/>
                    <Label fx:id="labelTopikDikuasai" text="0"/>
                    <Label fx:id="labelTugasHariIni" text="0"/>
                    <Label fx:id="labelTugasSelesai" text="0"/>
                    <ProgressBar fx:id="progressKeseluruhan" progress="0"/>
                    <ProgressBar fx:id="progressHariIni" progress="0"/>
                    <Label fx:id="labelProgressKeseluruhan" text="0%"/>
                    <Label fx:id="labelProgressHariIni" text="0%"/>
                </HBox>

                <!-- Activity Widgets Grid (Customizable) -->
                <VBox fx:id="activitySection" spacing="8">
                    <Label text="Aktivitas" styleClass="section-title" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
                    <ScrollPane fitToHeight="true" vbarPolicy="NEVER" hbarPolicy="AS_NEEDED" styleClass="widget-scroll-pane" 
                                style="-fx-background-color: transparent;" maxHeight="180" prefHeight="170">
                        <HBox fx:id="wadahWidgetKontainer" spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 4 0;"/>
                    </ScrollPane>
                </VBox>

                <!-- Rekomendasi dari Dosen (untuk Mahasiswa) -->
                <VBox fx:id="sectionRekomendasi" spacing="12" styleClass="card" visible="false" managed="false">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label text="Rekomendasi dari Dosen" styleClass="section-title" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="labelJumlahRekomendasi" styleClass="badge-primary"/>
                    </HBox>
                    <ScrollPane fitToWidth="true" maxHeight="200" style="-fx-background-color: transparent;">
                        <VBox fx:id="wadahRekomendasi" spacing="10" style="-fx-padding: 4;"/>
                    </ScrollPane>
                </VBox>

                <!-- Main Content Grid (Tugas Hari Ini + Ujian Mendatang) -->
                <GridPane fx:id="mainContentGrid" hgap="16" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="60" minWidth="400"/>
                        <ColumnConstraints percentWidth="40" minWidth="300"/>
                    </columnConstraints>

                    <!-- Tugas Hari Ini -->
                    <VBox spacing="12" styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Tugas Hari Ini" styleClass="section-title" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
                        <ScrollPane fitToWidth="true" minHeight="250" prefHeight="280" style="-fx-background-color: transparent;">
                            <VBox fx:id="wadahTugasHariIni" spacing="10" style="-fx-padding: 4;"/>
                        </ScrollPane>
                    </VBox>

                    <!-- Ujian Mendatang -->
                    <VBox spacing="12" styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Ujian Mendatang" styleClass="section-title" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
                        <ScrollPane fitToWidth="true" minHeight="250" prefHeight="280" style="-fx-background-color: transparent;">
                            <VBox fx:id="wadahUjianMendatang" spacing="10" style="-fx-padding: 4;"/>
                        </ScrollPane>
                    </VBox>
                </GridPane>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>

<!-- Overlay layer untuk dialog SPA-style (hidden by default) -->
<StackPane fx:id="dialogOverlay" visible="false" managed="false" styleClass="dialog-overlay" alignment="CENTER">
    <VBox fx:id="dialogContainer" styleClass="dialog-container" alignment="CENTER" maxWidth="380" maxHeight="250"/>
</StackPane>

</StackPane>
