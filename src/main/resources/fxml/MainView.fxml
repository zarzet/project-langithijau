<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyplanner.kontroler.KontrolerUtama">

    <!-- Sidebar Kiri -->
    <left>
        <VBox fx:id="sidebar" spacing="8" styleClass="sidebar" style="-fx-padding: 20 16; -fx-min-width: 240; -fx-pref-width: 240;">
            <!-- Logo/Title Section -->
            <VBox spacing="4" style="-fx-padding: 0 0 24 0;">
                <Label text="Perencana Belajar" styleClass="sidebar-title" style="-fx-font-size: 18px; -fx-font-weight: 700;"/>
                <Label text="Adaptif" styleClass="sidebar-subtitle" style="-fx-font-size: 13px; -fx-opacity: 0.7;"/>
            </VBox>

            <!-- Navigation Buttons -->
            <VBox spacing="8" VBox.vgrow="ALWAYS" style="-fx-padding: 8 0;">
                <Button fx:id="manageCourseBtn" text="Kelola Mata Kuliah" styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
                <Button fx:id="viewScheduleBtn" text="Lihat Jadwal" styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
                <Button fx:id="generateScheduleBtn" text="Buat Jadwal" styleClass="sidebar-btn-primary" maxWidth="Infinity" alignment="CENTER_LEFT" style="-fx-padding: 12 16;"/>
            </VBox>

            <!-- User Section at Bottom -->
            <MenuButton fx:id="userMenuBtn" text="Pengguna" styleClass="sidebar-btn" maxWidth="Infinity" mnemonicParsing="false" style="-fx-padding: 12 16;">
                <items>
                    <MenuItem fx:id="profileMenuItem" text="Profil Saya"/>
                    <MenuItem fx:id="settingsMenuItem" text="Pengaturan"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="logoutMenuItem" text="Keluar"/>
                </items>
            </MenuButton>
        </VBox>
    </left>

    <!-- Konten Utama -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="24" style="-fx-padding: 24;">

                <!-- Hero Section - Welcome & Date -->
                <HBox fx:id="welcomeSection" alignment="CENTER_LEFT" spacing="16" style="-fx-padding: 8 0;">
                    <!-- Toggle Sidebar Button -->
                    <Button fx:id="toggleSidebarBtn" styleClass="toggle-sidebar-btn" style="-fx-font-size: 24px; -fx-padding: 8 12;"/>

                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label fx:id="welcomeLabel" text="Selamat Datang!" styleClass="section-title" style="-fx-font-size: 28px; -fx-font-weight: 600;"/>
                        <Label fx:id="dateLabel" text="Senin, 20 Oktober 2025" styleClass="date-label" style="-fx-font-size: 14px; -fx-opacity: 0.7;"/>
                    </VBox>
                </HBox>

                <!-- Stats Overview Cards -->
                <GridPane fx:id="statsGrid" hgap="16" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" minWidth="200"/>
                        <ColumnConstraints percentWidth="50" minWidth="200"/>
                    </columnConstraints>

                    <!-- Kartu Progress Keseluruhan -->
                    <VBox spacing="12" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Progress Keseluruhan" styleClass="stat-title" style="-fx-font-size: 15px; -fx-font-weight: 600;"/>
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <VBox spacing="6" HBox.hgrow="ALWAYS">
                                <Label text="Total Topik" style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-weight: 500;"/>
                                <Label fx:id="totalTopicsLabel" text="0" styleClass="stat-number" style="-fx-font-size: 32px; -fx-font-weight: 600;"/>
                            </VBox>
                            <VBox spacing="6" HBox.hgrow="ALWAYS">
                                <Label text="Dikuasai" style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-weight: 500;"/>
                                <Label fx:id="masteredTopicsLabel" text="0" styleClass="stat-number" style="-fx-font-size: 32px; -fx-font-weight: 600;"/>
                            </VBox>
                        </HBox>
                        <VBox spacing="8">
                            <ProgressBar fx:id="overallProgressBar" progress="0" maxWidth="Infinity" style="-fx-pref-height: 8px;"/>
                            <Label fx:id="overallProgressLabel" text="0%" styleClass="progress-label" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                        </VBox>
                    </VBox>

                    <!-- Kartu Progress Hari Ini -->
                    <VBox spacing="12" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Progress Hari Ini" styleClass="stat-title" style="-fx-font-size: 15px; -fx-font-weight: 600;"/>
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <VBox spacing="6" HBox.hgrow="ALWAYS">
                                <Label text="Total Tugas" style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-weight: 500;"/>
                                <Label fx:id="todayTasksLabel" text="0" styleClass="stat-number" style="-fx-font-size: 32px; -fx-font-weight: 600;"/>
                            </VBox>
                            <VBox spacing="6" HBox.hgrow="ALWAYS">
                                <Label text="Selesai" style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-weight: 500;"/>
                                <Label fx:id="completedTasksLabel" text="0" styleClass="stat-number" style="-fx-font-size: 32px; -fx-font-weight: 600;"/>
                            </VBox>
                        </HBox>
                        <VBox spacing="8">
                            <ProgressBar fx:id="todayProgressBar" progress="0" maxWidth="Infinity" style="-fx-pref-height: 8px;"/>
                            <Label fx:id="todayProgressLabel" text="0%" styleClass="progress-label" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                        </VBox>
                    </VBox>
                </GridPane>

                <!-- Activity Widgets Grid -->
                <VBox fx:id="activitySection" spacing="12">
                    <Label text="Aktivitas" styleClass="section-title" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
                    <ScrollPane fitToHeight="true" vbarPolicy="NEVER" hbarPolicy="NEVER" styleClass="widget-scroll-pane" style="-fx-background-color: transparent;">
                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <VBox fx:id="streakContainer" alignment="CENTER" spacing="8"/>
                            <VBox fx:id="clockContainer" alignment="CENTER" spacing="8"/>
                            <VBox fx:id="studyTimeContainer" alignment="CENTER" spacing="8"/>
                            <VBox fx:id="nextReviewContainer" alignment="CENTER" spacing="8"/>
                            <VBox fx:id="upcomingTasksWidgetContainer" alignment="CENTER" spacing="8"/>
                        </HBox>
                    </ScrollPane>
                </VBox>

                <!-- Main Content Grid -->
                <GridPane fx:id="mainContentGrid" hgap="16" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="60" minWidth="400"/>
                        <ColumnConstraints percentWidth="40" minWidth="300"/>
                    </columnConstraints>

                    <!-- Tugas Hari Ini -->
                    <VBox spacing="12" styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Tugas Hari Ini" styleClass="section-title" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
                        <ScrollPane fitToWidth="true" minHeight="350" style="-fx-background-color: transparent;">
                            <VBox fx:id="todayTasksContainer" spacing="10" style="-fx-padding: 4;"/>
                        </ScrollPane>
                    </VBox>

                    <!-- Ujian Mendatang -->
                    <VBox spacing="12" styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Ujian Mendatang" styleClass="section-title" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
                        <ScrollPane fitToWidth="true" minHeight="350" style="-fx-background-color: transparent;">
                            <VBox fx:id="upcomingExamsContainer" spacing="10" style="-fx-padding: 4;"/>
                        </ScrollPane>
                    </VBox>
                </GridPane>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
