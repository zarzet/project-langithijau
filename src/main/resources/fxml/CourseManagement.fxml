<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyplanner.controller.CourseManagementController"
            prefWidth="1000" prefHeight="700">
    
    <top>
        <VBox style="-fx-padding: 20; -fx-background-color: #f8f9fa;">
            <Label text="🎓 Manajemen Mata Kuliah &amp; Topik" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.3" style="-fx-padding: 20;">
            
            <!-- Left Panel: Courses -->
            <VBox spacing="10">
                <Label text="Daftar Mata Kuliah" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <TableView fx:id="courseTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="courseCodeColumn" text="Kode" prefWidth="80"/>
                        <TableColumn fx:id="courseNameColumn" text="Nama Mata Kuliah" prefWidth="180"/>
                    </columns>
                </TableView>
                
                <HBox spacing="10">
                    <Button fx:id="addCourseBtn" text="➕ Tambah" styleClass="btn-success"/>
                    <Button fx:id="editCourseBtn" text="✏️ Edit" styleClass="btn-primary"/>
                    <Button fx:id="deleteCourseBtn" text="🗑️ Hapus" styleClass="btn-danger"/>
                </HBox>
            </VBox>
            
            <!-- Right Panel: Topics and Exams -->
            <VBox spacing="15">
                
                <!-- Topics Section -->
                <VBox spacing="10">
                    <Label text="Topik Materi" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    
                    <TableView fx:id="topicTable" prefHeight="250">
                        <columns>
                            <TableColumn fx:id="topicNameColumn" text="Nama Topik" prefWidth="200"/>
                            <TableColumn fx:id="topicPriorityColumn" text="Prioritas" prefWidth="80"/>
                            <TableColumn fx:id="topicDifficultyColumn" text="Kesulitan" prefWidth="80"/>
                            <TableColumn fx:id="topicReviewCountColumn" text="Review" prefWidth="70"/>
                        </columns>
                    </TableView>
                    
                    <HBox spacing="10">
                        <Button fx:id="addTopicBtn" text="➕ Tambah" styleClass="btn-success"/>
                        <Button fx:id="editTopicBtn" text="✏️ Edit" styleClass="btn-primary"/>
                        <Button fx:id="deleteTopicBtn" text="🗑️ Hapus" styleClass="btn-danger"/>
                    </HBox>
                </VBox>
                
                <Separator/>
                
                <!-- Exams Section -->
                <VBox spacing="10">
                    <Label text="Jadwal Ujian" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    
                    <TableView fx:id="examTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="examTitleColumn" text="Judul" prefWidth="150"/>
                            <TableColumn fx:id="examTypeColumn" text="Tipe" prefWidth="100"/>
                            <TableColumn fx:id="examDateColumn" text="Tanggal" prefWidth="120"/>
                        </columns>
                    </TableView>
                    
                    <HBox spacing="10">
                        <Button fx:id="addExamBtn" text="➕ Tambah" styleClass="btn-success"/>
                        <Button fx:id="editExamBtn" text="✏️ Edit" styleClass="btn-primary"/>
                        <Button fx:id="deleteExamBtn" text="🗑️ Hapus" styleClass="btn-danger"/>
                    </HBox>
                </VBox>
                
            </VBox>
            
        </SplitPane>
    </center>
    
</BorderPane>

