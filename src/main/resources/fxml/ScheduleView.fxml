<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyplanner.kontroler.KontrolerTampilanJadwal"
            styleClass="root">

    <!-- Header Section -->
    <top>
        <VBox spacing="20" styleClass="schedule-header">
            <!-- Title & Date Picker Row -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Jadwal Belajar" styleClass="schedule-page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="12" alignment="CENTER">
                    <Button fx:id="prevWeekBtn" styleClass="nav-arrow-btn"/>
                    <DatePicker fx:id="datePicker" styleClass="date-picker-modern"/>
                    <Button fx:id="nextWeekBtn" styleClass="nav-arrow-btn"/>
                    <Button fx:id="todayBtn" text="Hari Ini" styleClass="btn-primary"/>
                </HBox>
            </HBox>

            <!-- Week Calendar View -->
            <HBox fx:id="weekCalendar" spacing="8" alignment="CENTER" styleClass="week-calendar-container">
                <!-- Will be populated dynamically with day cards -->
            </HBox>

            <!-- Selected Date Info -->
            <HBox spacing="16" alignment="CENTER_LEFT" styleClass="selected-date-info">
                <VBox spacing="4">
                    <Label fx:id="selectedDateLabel" text="Kamis, 20 November 2025"
                           styleClass="selected-date-label"/>
                    <Label fx:id="sessionCountLabel" text="0 sesi belajar"
                           styleClass="session-count-label"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content - Timeline Schedule -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-padding: 0 24 24 24;">
            <VBox spacing="0">
                <!-- Timeline Container -->
                <VBox fx:id="scheduleContainer" spacing="16">
                    <!-- Will be populated with schedule cards -->
                </VBox>

                <!-- Empty State -->
                <VBox fx:id="emptyState" alignment="CENTER" spacing="16" styleClass="empty-state-schedule">
                    <Label text="Tidak ada jadwal untuk tanggal ini"
                           styleClass="empty-state-title"/>
                    <Label text="Pilih tanggal lain atau buat jadwal baru"
                           styleClass="empty-state-subtitle"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
