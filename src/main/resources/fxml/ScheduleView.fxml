<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.studyplanner.controller.ScheduleViewController"
      spacing="0" styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox styleClass="header" spacing="15" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" right="20" bottom="10" left="20"/>
        </padding>

        <HBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Pilih Tanggal:" styleClass="label"/>
            <DatePicker fx:id="datePicker"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label fx:id="selectedDateLabel" text="Senin, 20 Oktober 2025"
                   styleClass="section-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="sessionCountLabel" text="0 sesi belajar"
                   styleClass="text-small"/>
        </HBox>
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
        <VBox fx:id="scheduleContainer" spacing="20">
            <padding>
                <Insets top="30" right="20" bottom="30" left="20"/>
            </padding>
        </VBox>
    </ScrollPane>

</VBox>
