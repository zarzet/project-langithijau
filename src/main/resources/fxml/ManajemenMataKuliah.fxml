<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyplanner.kontroler.KontrolerManajemenMataKuliah">

    <center>
        <SplitPane dividerPositions="0.3" styleClass="split-pane-custom">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Panel Kiri: Mata Kuliah -->
            <VBox spacing="15">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Daftar Mata Kuliah" styleClass="section-title"/>

                <TableView fx:id="tabelMataKuliah" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="kolomKodeMataKuliah" text="Kode" minWidth="60" prefWidth="80"/>
                        <TableColumn fx:id="kolomNamaMataKuliah" text="Nama Mata Kuliah" minWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="5" right="0" bottom="0" left="0"/>
                    </padding>
                    <Button fx:id="addCourseBtn" text="Tambah" styleClass="btn-success"/>
                    <Button fx:id="editCourseBtn" text="Edit" styleClass="btn-primary"/>
                    <Button fx:id="deleteCourseBtn" text="Hapus" styleClass="btn-danger"/>
                </HBox>
            </VBox>

            <!-- Panel Kanan: Topik dan Ujian -->
            <VBox spacing="25">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Bagian Topik -->
                <VBox spacing="15" VBox.vgrow="ALWAYS">
                    <Label text="Topik Materi" styleClass="section-title"/>

                    <TableView fx:id="tabelTopik" minHeight="200" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="kolomNamaTopik" text="Nama Topik" minWidth="150"/>
                            <TableColumn fx:id="kolomPrioritasTopik" text="Prioritas" minWidth="70" prefWidth="90"/>
                            <TableColumn fx:id="kolomKesulitanTopik" text="Kesulitan" minWidth="70" prefWidth="90"/>
                            <TableColumn fx:id="kolomJumlahUlasanTopik" text="Review" minWidth="60" prefWidth="80"/>
                        </columns>
                    </TableView>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <padding>
                            <Insets top="5" right="0" bottom="0" left="0"/>
                        </padding>
                        <Button fx:id="addTopicBtn" text="Tambah" styleClass="btn-success"/>
                        <Button fx:id="editTopicBtn" text="Edit" styleClass="btn-primary"/>
                        <Button fx:id="deleteTopicBtn" text="Hapus" styleClass="btn-danger"/>
                    </HBox>
                </VBox>

                <Separator styleClass="separator"/>

                <!-- Bagian Ujian -->
                <VBox spacing="15" VBox.vgrow="ALWAYS">
                    <Label text="Jadwal Ujian" styleClass="section-title"/>

                    <TableView fx:id="tabelUjian" minHeight="150" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="kolomJudulUjian" text="Judul" minWidth="120"/>
                            <TableColumn fx:id="kolomTipeUjian" text="Tipe" minWidth="80" prefWidth="100"/>
                            <TableColumn fx:id="kolomTanggalUjian" text="Tanggal" minWidth="100" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <padding>
                            <Insets top="5" right="0" bottom="0" left="0"/>
                        </padding>
                        <Button fx:id="addExamBtn" text="Tambah" styleClass="btn-success"/>
                        <Button fx:id="editExamBtn" text="Edit" styleClass="btn-primary"/>
                        <Button fx:id="deleteExamBtn" text="Hapus" styleClass="btn-danger"/>
                    </HBox>
                </VBox>

            </VBox>

        </SplitPane>
    </center>

</BorderPane>
